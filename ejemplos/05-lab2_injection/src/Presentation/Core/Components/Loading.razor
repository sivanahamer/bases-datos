@if (IsLoading)
{
    <div class="d-flex justify-content-center text-primary">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    @ChildContent
}


@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
